<div class="row justify-content-center">
  <div class="col-sm-4 my-3">
    <%= form_with url: contents_search_path, method: :get, class: "d-flex" do %>
      <%= label_tag :query, "Search contents", class: "visually-hidden" %>
      <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Type in a movie or a song you like"
        %>
      <%= hidden_field_tag :action_type,
            params[:action_type] %>
      <%= submit_tag "Search", name: "", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
