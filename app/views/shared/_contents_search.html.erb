<div id="contents_search">
  <div class="container mt-4">
    <div class="content-border row g-4">
      <% @contents.each do |content| %>
        <div class="col-4">

          <div id="<%= content.id %>"
              class="content-box card"
              data-action="click->shelf#select"
              data-shelf-title-param="<%= content.title %>"
              data-shelf-image-param="<%= content.image_url %>">
              <img src="<%= content.image_url %>" alt="<%= content.title %> image">
              <% if content.format == "song" %>
                <div class="song-title mt-auto">
                  <h5 class="text-center mb-0"><%= content.title.truncate(20) %></h5>
                  <p class="mb-0"><%= content.creator %></p>
                </div>

              <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
