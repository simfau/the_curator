<div id="body">
  <div class="recommendation_card mt-5">
    <div class="img_container d-flex justify-content-center">
      <div class="img_card ">
        <img src="<%= @content[:content].image_url %>"
            alt="<%= @content[:content].title %>"
            class="img_tag">
        <div class="stamp_wrapper">
          <%= image_tag "curator_stamp.png",class: "stamp-img" %>
          <div class="stamp_text">
            <div>
              <div class="match_score"><%= @content[:score].round %>%</div>
              <div class="match_word">Match</div>
            </div>
          </div>
        </div>
        <div class="img_title">
          <%= @content[:content].title %>
        </div>
      </div>
    </div>
    <div class="explanation">
      <h3><%= @explanation %></h3>
    </div>

    <div class="information">
      <p><%= @content[:content].description.presence || "No description available" %></p>
      <p><strong>Creator:</strong> <%= @content[:content].creator %></p>
      <p><strong>Release date:</strong> <%= @content[:content].date_of_release %></p>
      <p><strong>Duration:</strong> <%= @content[:content].duration %></p>
      <p><strong>Popularity:</strong> <%= @content[:content].popularity_score %></p>
    </div>

  </div>
  <div class="footer d-flex fixed-bottom">
    <div class="d-flex justify-content-evenly w-100 mb-2 p-2">
      <%= link_to "Home", root_path, class: "btn btn-light text-center align-self-center" %>
    </div>
  </div>
</div>
