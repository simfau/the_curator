<div class="wrapper-for-stimulus" data-controller="shelf">
  <%= render "shared/search_form" %>

  <div class="container mt-4">
    <div class="row g-4">
      <% @contents.each do |content| %>
        <div class="col-4">
          <h5 class="text-center"><%= content.title %></h5>
            <div style="background-image: url('<%= content.image_url %>'); background-size: contain; background-repeat: no-repeat;"class="content-cube card"
              data-action="click->shelf#select"
              data-shelf-title-param="<%= content.title %>"
              data-shelf-image-param="<%= content.image_url %>">
            </div>
        </div>
      <% end %>
    </div>
  </div>
  <%= render "pages/contents_search" %>

  <%= render "shared/shelf" %>

</div>
